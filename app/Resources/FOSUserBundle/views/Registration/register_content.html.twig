{% trans_default_domain 'FOSUserBundle' %}

<div class="container text-center">

    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 mb-5">
			{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
			    
                <fieldset>
                    <h2>Please Register</h2>
                    <hr class="colorgraph">
                   <div class="form-group">
                       {{ form_widget(form.firstname, { 'attr': {'class':'form-control input-lg', 'placeholder': 'first name'|trans}}) }}
                    </div>

                    <div class="form-group">
                       {{ form_widget(form.lastname, { 'attr': {'class':'form-control input-lg', 'placeholder': 'last name'|trans}}) }}
                    </div>

                    <div class="form-group">
                       {{ form_widget(form.username, { 'attr': {'class':'form-control input-lg', 'placeholder': 'username'|trans}}) }}
                    </div>

                    <div class="form-group">
                       {{ form_widget(form.email, { 'attr': {'class':'form-control input-lg', 'placeholder': 'email'|trans}}) }}
                    </div>

                    <div class="form-group">
                       {{ form_widget(form.adresse, { 'attr': {'class':'form-control input-lg', 'placeholder': 'Adresse'|trans}}) }}
                    </div>

                    <div class="form-group">
                       {{ form_widget(form.plainPassword.first, { 'attr': {'class':'form-control input-lg', 'placeholder': 'password'|trans}}) }}
                    </div>

                    <div class="form-group">
                       {{ form_widget(form.plainPassword.second, { 'attr': {'class':'form-control input-lg', 'placeholder': 're-password'|trans}}) }}
                    </div>

                    

                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="Register">
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <a href="{{ path('fos_user_security_login') }}" class="btn btn-lg btn-primary btn-block">Sign In</a>
                        </div>
                    </div>
                </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
</div>