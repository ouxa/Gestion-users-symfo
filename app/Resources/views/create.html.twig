{% extends "base.html.twig" %}


{% block body %}
	<div class="container">
		<div class="row" style="margin-top:20px">
			<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

				{{form_start(form)}}
				<fieldset>
					<h2>Create New User</h2>
                    <hr class="colorgraph">
					<div class="form-group">
				        {{ form_widget(form.firstname) }}
				    </div>

				    <div class="form-group">
				        {{ form_widget(form.lastname) }}
				    </div>

				    <div class="form-group">
				        {{ form_widget(form.username) }}
				    </div>

				    <div class="form-group">
				        {{ form_widget(form.email) }}
				    </div>

				    <div class="form-group">
				        {{ form_widget(form.adresse) }}
				    </div>

				    <div class="form-group">
				        {{ form_widget(form.password, {data : '0123456789'}) }}
				    </div>

				    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <input type="submit" name="create" class="btn btn-lg btn-success btn-block" value="Create">
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <a href="{{ path('admin_page') }}" class="btn btn-lg btn-secondary btn-block">Cancel</a>
                        </div>
                    </div>
				</fieldset>
				{{form_end(form)}}
			</div>
		</div>

	</div>
{% endblock %}
