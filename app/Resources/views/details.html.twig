{% extends "base.html.twig" %}


{% block body %}
	<div class="container">
		<div class="row" style="margin-top:20px">
			<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

				
				<fieldset>
					<h2>Information About {{user.lastname}}</h2>
                    <hr class="colorgraph">
					<ul class="list-group">

					  <li class="list-group-item list-group-item-success text-center"><span class="font-weight-bold">First Name : </span>{{user.firstname}}</li>

					  <li class="list-group-item list-group-item-secondary text-center"><span class="font-weight-bold">Last Name : </span>{{user.lastname}}</li>

					  <li class="list-group-item list-group-item-success text-center"><span class="font-weight-bold">Usrename: </span>{{user.username}}</li>

					  <li class="list-group-item list-group-item-secondary text-center"><span class="font-weight-bold">Email : </span>{{user.email}}</li>

					  <li class="list-group-item list-group-item-success text-center"><span class="font-weight-bold">Adresse : </span>{{user.adresse}}</li>

					   <li class="list-group-item list-group-item-secondary text-center"><span class="font-weight-bold">Role : </span>{% for role in user.roles %}
                            {{ role }},
                        {% endfor %}</li>

					</ul>
				    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6 col-sm-offset-2 col-md-offset-3">
                            <a href="{{ path('admin_page') }}" class="btn btn-lg btn-secondary btn-block">back</a>
                        </div>
                    </div>
				</fieldset>
				
			</div>
		</div>

	</div>
{% endblock %}